{
    "name": "Data Scraper Template",
    "version": "1.0",
    "author": "Guilherme Martins",
    "description": "Data Scraper Generic Template - Sites love to collect all the possible data from you, What if we decide to collect data from them? ",
    "manifest_version": 2,
    "permissions": ["storage", "declarativeContent", "activeTab"],
    "background": {
        "scripts":[
            "js/background.js"
	],       
        "_scripts": [
            "js/es6-promise.auto.min.js",
            "js/defaults.js",
            "js/speech.js",
            "js/document.js",
            "js/events.js",
            "js/stt.js",
            "js/listen.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/i16.png",
            "32": "images/i32.png",
            "64": "images/i64.png",
            "128": "images/i128.png"
        }
    },
    "icons": {
        "16": "images/i16.png",
        "32": "images/i32.png",
        "64": "images/i64.png",
        "128": "images/i128.png"
    },
    "options_page": "options.html"
}
